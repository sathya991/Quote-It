<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/quoteView"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/likeVIew"
        android:layout_width="34dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="509dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/quoteView"
        app:layout_constraintTop_toBottomOf="@+id/quoteView"
        app:layout_constraintVertical_bias="0.042"
        app:srcCompat="@drawable/heart" />

    <TextView
        android:id="@+id/usernameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="3dp"
        android:text="TextView"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/quoteView"
        app:layout_constraintStart_toStartOf="@+id/quoteView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/likeNumber"
        android:layout_width="28dp"
        android:layout_height="22dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="280dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/likeVIew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/likeVIew"
        app:layout_constraintTop_toTopOf="@+id/likeVIew" />
</androidx.constraintlayout.widget.ConstraintLayout>